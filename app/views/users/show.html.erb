<div class="container">
  <div class="row">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <td>name</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>introduction</td>
          <tb><%= @user.introduction %></tb>
        </tr>
      </table>
      <%= link_to  root_path, class: "btn btn-outline-dark" do%>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
  </div>
  </div>
  <div class="col-xs-8">
    <h1>Books</h1>
      <div>
        <% @books.each do |book| %>
          <%= image_tag @user.get_profile_image(100,100) %>
          <p>Title</p>
          <span><%= book.title %></span>
          <p>Opinion</p>
          <span><%= book.body %></span>
        <% end %>
      </div>
  </div>
  <div class="col-xs-4">
    <h1>New book</h1>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :opinion %><br>
        <%= f.submit 'Create Book' %>
      <% end %>
  </div>
</div>