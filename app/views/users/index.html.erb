<h1>Books</h1>
  <div>
    <% @users.each do |user| %>
      <%= image_tag user.get_profile_image(100,100) %>
      <p>Title</p>
      <span><%= book.title %></span>
      <p>Opinion</p>
      <span><%= book.body %></span>
    <% end %>
  </div>



  <h1>New book</h1>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :opinion %><br>
    <%= f.submit 'Create Book' %>
  <% end %>